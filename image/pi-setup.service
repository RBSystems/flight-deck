[Unit]
Description=Pi setup
After=getty@tty2.service
Requires=getty@tty2.service

[Service]
Type=simple
ExecStart=/byu/pi-setup.sh
EnvironmentFile=/etc/environment
StandardInput=tty
StandardOutput=tty
StandardError=tty
TTYPath=/dev/tty2
TTYReset=yes
TTYVHangup=yes

[Install]
WantedBy=default.target
